{
  "version": 2,
  "builds": [
    {
      "src": "server/index.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "public/**",
          "remotion/**",
          "server-v2/**",
          "node_modules/remotion/**",
          "node_modules/react/**",
          "node_modules/react-dom/**",
          "node_modules/@remotion/**"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/server/index.js"
    }
  ]
}
