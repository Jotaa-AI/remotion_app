# Puerto del servidor web/API
PORT=8787

# URL pública base para construir links de descarga
BASE_URL=http://localhost:8787

# OpenAI (opcional, recomendado para mejor calidad)
OPENAI_API_KEY=
TRANSCRIBE_MODEL=whisper-1
# Límite recomendado por OpenAI para subida de audio/transcripción
TRANSCRIBE_MAX_BYTES=25165824
# Si el audio supera el límite, se trocea en segmentos de N segundos
TRANSCRIBE_CHUNK_SECONDS=900
LLM_MODEL=gpt-4o-mini

# Configuración de render
RENDER_FPS=30
DEFAULT_WIDTH=1920
DEFAULT_HEIGHT=1080
